{
  "/api/private/users": {
    "get": {
      "summary": "Lista todos os usuários",
      "description": "Retorna uma lista paginada de todos os usuários cadastrados",
      "tags": ["Usuários"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "page",
          "in": "query",
          "description": "Número da página",
          "required": false,
          "schema": { "type": "number", "default": 1 },
          "example": 1
        },
        {
          "name": "limit",
          "in": "query",
          "description": "Itens por página",
          "required": false,
          "schema": { "type": "number", "default": 10 },
          "example": 10
        },
        {
          "name": "role",
          "in": "query",
          "description": "Filtrar por tipo de usuário",
          "required": false,
          "schema": { "type": "string", "enum": ["admin", "client"] },
          "example": "client"
        }
      ],
      "responses": {
        "200": {
          "description": "Lista de usuários retornada com sucesso",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "../responses/commonResponses.json#/ListResponse" },
                  {
                    "properties": {
                      "data": {
                        "type": "array",
                        "items": { "$ref": "../schemas/user.json#/UserList" }
                      }
                    }
                  }
                ]
              },
              "examples": {
                "success": {
                  "summary": "Lista de usuários",
                  "value": {
                    "success": true,
                    "message": "Usuários listados com sucesso",
                    "data": [
                      {
                        "_id": "507f1f77bcf86cd799439011",
                        "name": "João Silva",
                        "email": "joao@email.com",
                        "role": "client"
                      },
                      {
                        "_id": "507f1f77bcf86cd799439012",
                        "name": "Maria Admin",
                        "email": "maria@email.com",
                        "role": "admin"
                      }
                    ],
                    "total": 2,
                    "page": 1,
                    "limit": 10
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Não autorizado",
          "content": {
            "application/json": {
              "schema": { "$ref": "../responses/commonResponses.json#/ErrorResponse" }
            }
          }
        }
      }
    },
    "post": {
      "summary": "Cria novo usuário",
      "description": "Cadastra um novo usuário no sistema",
      "tags": ["Usuários"],
      "security": [{ "bearerAuth": [] }],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": { "$ref": "../schemas/user.json#/UserCreate" },
            "examples": {
              "admin": {
                "summary": "Criar usuário admin",
                "value": {
                  "name": "João Admin",
                  "email": "admin@email.com",
                  "password": "senha123",
                  "role": "admin"
                }
              },
              "client": {
                "summary": "Criar usuário cliente",
                "value": {
                  "name": "Maria Cliente",
                  "email": "cliente@email.com",
                  "password": "senha456",
                  "role": "client"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Usuário criado com sucesso",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "../responses/commonResponses.json#/DataResponse" },
                  {
                    "properties": {
                      "data": { "$ref": "../schemas/user.json#/UserResponse" }
                    }
                  }
                ]
              }
            }
          }
        },
        "400": {
          "description": "Erro de validação",
          "content": {
            "application/json": {
              "schema": { "$ref": "../responses/commonResponses.json#/ValidationError" }
            }
          }
        }
      }
    }
  },
  
  "/api/private/users/{id}": {
    "get": {
      "summary": "Busca usuário por ID",
      "description": "Retorna os dados de um usuário específico",
      "tags": ["Usuários"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID do usuário",
          "required": true,
          "schema": { "type": "string" },
          "example": "507f1f77bcf86cd799439011"
        }
      ],
      "responses": {
        "200": {
          "description": "Usuário encontrado com sucesso",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "../responses/commonResponses.json#/DataResponse" },
                  {
                    "properties": {
                      "data": { "$ref": "../schemas/user.json#/UserResponse" }
                    }
                  }
                ]
              }
            }
          }
        },
        "404": {
          "description": "Usuário não encontrado",
          "content": {
            "application/json": {
              "schema": { "$ref": "../responses/commonResponses.json#/ErrorResponse" }
            }
          }
        }
      }
    },
    "put": {
      "summary": "Atualiza usuário",
      "description": "Atualiza os dados de um usuário existente",
      "tags": ["Usuários"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID do usuário",
          "required": true,
          "schema": { "type": "string" },
          "example": "507f1f77bcf86cd799439011"
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": { "$ref": "../schemas/user.json#/UserUpdate" }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Usuário atualizado com sucesso",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "../responses/commonResponses.json#/DataResponse" },
                  {
                    "properties": {
                      "data": { "$ref": "../schemas/user.json#/UserResponse" }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    "delete": {
      "summary": "Remove usuário",
      "description": "Remove um usuário do sistema (soft delete)",
      "tags": ["Usuários"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID do usuário",
          "required": true,
          "schema": { "type": "string" },
          "example": "507f1f77bcf86cd799439011"
        }
      ],
      "responses": {
        "200": {
          "description": "Usuário removido com sucesso",
          "content": {
            "application/json": {
              "schema": { "$ref": "../responses/commonResponses.json#/SuccessResponse" }
            }
          }
        }
      }
    }
  }
}

