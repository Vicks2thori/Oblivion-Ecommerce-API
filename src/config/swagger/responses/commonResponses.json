{
  "SuccessResponse": {
    "type": "object",
    "properties": {
      "success": { 
        "type": "boolean", 
        "description": "Indica se a operação foi bem-sucedida",
        "example": true
      },
      "message": { 
        "type": "string", 
        "description": "Mensagem de resposta",
        "example": "Operação realizada com sucesso"
      }
    },
    "required": ["success", "message"]
  },
  
  "DataResponse": {
    "allOf": [
      { "$ref": "#/SuccessResponse" },
      {
        "type": "object",
        "properties": {
          "data": { 
            "type": "object", 
            "description": "Dados retornados pela operação"
          }
        },
        "required": ["data"]
      }
    ]
  },
  
  "ListResponse": {
    "allOf": [
      { "$ref": "#/SuccessResponse" },
      {
        "type": "object",
        "properties": {
          "data": { 
            "type": "array", 
            "description": "Lista de dados retornados"
          },
          "total": { 
            "type": "number", 
            "description": "Total de itens na lista",
            "example": 25
          },
          "page": { 
            "type": "number", 
            "description": "Página atual",
            "example": 1
          },
          "limit": { 
            "type": "number", 
            "description": "Itens por página",
            "example": 10
          }
        },
        "required": ["data", "total"]
      }
    ]
  },
  
  "ErrorResponse": {
    "type": "object",
    "properties": {
      "success": { 
        "type": "boolean", 
        "description": "Indica se a operação foi bem-sucedida",
        "example": false
      },
      "message": { 
        "type": "string", 
        "description": "Mensagem de erro",
        "example": "Erro de validação"
      },
      "errors": { 
        "type": "array", 
        "description": "Lista de erros específicos",
        "items": { "type": "string" },
        "example": ["Nome é obrigatório", "Email inválido"]
      }
    },
    "required": ["success", "message"]
  },
  
  "ValidationError": {
    "allOf": [
      { "$ref": "#/ErrorResponse" },
      {
        "type": "object",
        "properties": {
          "statusCode": { 
            "type": "number", 
            "description": "Código de status HTTP",
            "example": 400
          }
        },
        "required": ["statusCode"]
      }
    ]
  }
}

